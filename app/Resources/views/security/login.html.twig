
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Login</title>

    <link href="{{ asset('includes/admin/font-awesome/css/font-awesome.css') }}" rel="stylesheet">

    <link href="{{ asset('includes/admin/css/animate.css') }}" rel="stylesheet">
    <link href="{{ asset('includes/admin/css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('includes/admin/css/style.css') }}" rel="stylesheet">

</head>

<body class="gray-bg">

<div class="middle-box text-center loginscreen animated fadeInDown">
    {% if app.session.started %}
        {#{% set tab = app.session.flashbag.get('personal_details')|first|default('personal_details') %}#}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-{{ flashMessage.alert }} fade in block-inner">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                <i class="icon-checkmark-circle"></i>
                <strong>{{ flashMessage.title }}</strong> {{ flashMessage.message }}
            </div>
        {% endfor %}
    {% endif %}
    <div>
        <div>

            {#<h1 class="logo-name">Login</h1>#}

        </div>
        {#<h3>Welcome to IN+</h3>#}
        {#<p>Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.#}
            <!--Continually expanded and constantly improved Inspinia Admin Them (IN+)-->
        </p>
        <p>Login in. To see it in action.</p>
        {% if error %}
            <div class="error" style="color: red">{{ error.message }}</div>
        {% endif %}
        {{ form_start(form, {attr: {'class': 'm-t', 'role': 'form'}}) }}
        <div class="form-group">
            {{ form_widget(form._username, {attr: {'class': 'form-control', 'placeholder': 'Username'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form._password, {attr: {'class': 'form-control', 'placeholder': 'Password'}}) }}
        </div>
        {{ form_widget(form.login) }}

        {#<a href="{{ path('recovery') }}"><small>Forgot password?</small></a>#}
        <p class="text-muted text-center"><small>Do not have an account?</small></p>
        {#<a class="btn btn-sm btn-white btn-block" href="{{ path('sign_up') }}">Create an account</a>#}
        {#{% if app.request.get('_route') != app.request.headers.get('referer') %}#}
            {#<input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}" />#}
        {#{% endif %}#}
        {{ form_end(form) }}
    </div>
</div>

<!-- Mainly scripts -->
<script src="{{ asset('includes/admin/js/jquery-2.1.1.js') }}"></script>
<script src="{{ asset('includes/admin/js/bootstrap.min.js') }}"></script>

</body>

</html>